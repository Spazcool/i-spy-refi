{
  "hosting": {
    "public": "client/build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/secrets",
        "function": "widgets"
      },
      {
        "source": "/get",
        "function": "widgets"
      },
      {
        "source": "**",
        "function":"widgets"
      }
      
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "emulators":{
    "functions":{
      "port": 5002
    }
  }
}
