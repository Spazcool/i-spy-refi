{
  "hosting": {
    "public": "client/build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "thing"
      } 
    ]
  },

  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },

  "emulators": {
    "hosting": {
      "port": 6000,
      "host": "0.0.0.0",
      "public": "client/build"
    },
    "functions": {
      "port": 6001,
      "host": "0.0.0.0"
    },
    "firestore": {
      "port": 6002,
      "host": "0.0.0.0"
    }

  }
}
